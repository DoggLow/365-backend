    <tr>
      <td width="35%"></td>
      <td width="30%">
        <% if current_user.is_affiliate? %>
          <%= link_to 'Go to affiliate', affiliates_path, class: "btn btn-default btn-lg btn-block" %>
        <% else %>
          <%= button_to 'Become an affiliate', new_affiliate_path, class: "btn btn-default btn-lg btn-block" %>
        <% end %>
      </td>
      <td width="35%"></td>
    </tr>
  </table>
<% end %>


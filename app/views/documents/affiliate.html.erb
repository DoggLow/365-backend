<h1>Affiliate Program</h1>
<hr>

<p>
  <b>Please introduce your impressions on Rabbit-cc on your website or blog.</b>
</p>

<% if current_user %>
  <% if current_user.is_affiliate? %>
    <br>
  <% else %>
    <div class="alert alert-dismissable alert-info">
      <p>
        <i class="fa fa-info-circle"></i>
        <span>
          You have not enabled affiliate program. Please take part in affiliate program.
        </span>
      </p>
    </div>
  <% end %>
<% else %>
  <div class="alert alert-dismissable alert-info">
    <p>
      <i class="fa fa-info-circle"></i>
      <span>
        Please <%= link_to 'Sign Up', signup_path %> or <%= link_to 'Sign In', signin_path %> to take part in affiliate program.
      </span>
    </p>
  </div>
<% end %>

